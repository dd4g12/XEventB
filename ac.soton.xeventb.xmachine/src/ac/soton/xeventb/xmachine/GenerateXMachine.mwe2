var rootPath = ".."


Workflow {

	component = XtextGenerator {
//		configuration = MyGeneratorModule{
		configuration={
			project = StandardProjectConfig {
				baseName = "ac.soton.xeventb.xmachine"
				rootPath = rootPath
				runtimeTest = {
					enabled = true
				}
				eclipsePlugin = {
					enabled = true
				}
				eclipsePluginTest = {
					enabled = true
				}
