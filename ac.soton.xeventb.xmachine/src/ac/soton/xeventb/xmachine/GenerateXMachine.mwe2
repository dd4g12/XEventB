			}
			code = {
				encoding = "UTF-8"
				lineDelimiter = "\n"
				fileHeader = "/*\n * generated by Xtext \${version}\n */"
			}
		}
		language = StandardLanguage {
			name = "ac.soton.xeventb.xmachine.XMachine"
			fileExtensions = "bumx"
			referencedResource = "platform:/resource/ac.soton.eventb.emf.inclusion/model/inclusion.genmodel"
