			referencedResource = "platform:/resource/ac.soton.eventb.emf.core.extension/model/eventbcoreextension.genmodel"
			
			fragment = ecore2xtext.Ecore2XtextValueConverterServiceFragment2 auto-inject {}

			formatter = {
				generateStub = true
			}

			serializer = {
				generateStub = false
